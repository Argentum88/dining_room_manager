<div ng-repeat="item in data" class="row top-buffer list-group {{'item'+$index}}">
    <div class="col-lg-3 list-group-item list-group-item-info">
        {{item.name}}
    </div>
    <button type="button" class="btn btn-success" ng-click="takeOrder($index)">Заказать</button>
    <input type="text" class="quantity">
</div>